RebelArrival:
CHECK_TURNS
SVAL s1 7
BEQ 1 s1 sC  //if the turn count is 7, then we branch to the rebel spawn event
	CHECK_EVENTID 10 
	BNE 1 s0 sC //if the pirate boss is dead, play the even early
	ENUF 12 //unset the rebel arrival flag if neither of these are true
	GOTO 2
LABEL 1
	CAMERA_CENTERED [23,16]
	TILECHANGE 0
	STAL 30
	TILECHANGE 1
	SOUN 0x02D7 //snag falling sound effect
	STAL 15
	FADI 15
	SpawnReinforcements(RebelSpawn)
	FADU 15
	ENUN
	Text(ChA4RebelArrivalText)
	SetAI(A4Pirate,0,0,4,0)
LABEL 2
NoFade
ENDA

RebelWarning1:
ENUF 12 //turn this off, as the player could still potentially kill the boss early
CHECK_EVENTID 10 //play this event if the boss hasn't been killed
BNE 4 s0 sC
	CAMERA_CENTERED [23,25]
	STAL 30
	TILECHANGE 2
	CameraCursor(Lua)
	Text(ChA4RebelWarningText)
LABEL 4
NoFade
ENDA

